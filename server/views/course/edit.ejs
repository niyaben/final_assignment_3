<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>


            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Course Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Course Name"
                    name="name"
                    value="<%= Course.course_name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Course Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the Course Number"
                    name="number" 
                    value="<%= Course.course_number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="profnameTextField">Prof. name</label>
                    <input type="text" class="form-control"
                    id="profnameTextField"
                    placeholder="Enter the name of professor"
                    name="Profname " 
                    value="<%= Course.Prof_name %>"
                    required>
                </div>

                  <div class="form-group">
                    <label for="intakeTextField">Intake</label>
                    <input type="text" class="form-control"
                    id="intakeTextField"
                    placeholder="Enter the intake month"
                    name="intake" 
                    value="<%= Course.intake %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="DescriptionTextArea">Description</label>
                    <input type="text" class="form-control"
                    id="DescriptionTextArea"
                    placeholder="Enter the a brief description of the course"
                    name="Description" 
                    value="<%= Course.Description %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/Courseslist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>